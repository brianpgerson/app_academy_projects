<!DOCTYPE html>
<html>
<head>
  <title>Rojoit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="background-color: #98fb98; font-family: 'Comic Sans MS'; color: red; margin-left: 20px">

  <% if flash %>
    <% flash.each do |cat, msg| %>
      <%= msg.first %>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
