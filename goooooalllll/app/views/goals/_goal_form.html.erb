<% action_url = (goal.persisted?) ? goal_url(goal) : goals_url %>
<% route_verb = (goal.persisted?) ? "PATCH" : "POST" %>
<% butt_text = (goal.persisted?) ? "Update Goal" : "Create Goal" %>
<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="<%= route_verb %>">
  <p>
    <label for="title">Title</label>
    <input type="text" id="title" name="goal[title]" value="<%= goal.title %>">
  </p>
  <p>
    <label for="description">Description</label>
    <input type="text" id="description" name="goal[description]" value="<%= goal.description %>">
  </p>
  <% if goal.persisted? %>
  <p>
    <label for="progress">In Progress</label>
    <input type="radio" id="progress" name="goal[completed]" <%= 'checked' if goal.completed == false %> >
    <label for="complete">Completed</label>
    <input type="radio" id="complete" name="goal[progress]" <%= "checked" if goal.completed %>>
  </p>
  <% end %>

  <p>
    <input type="submit" value="<%= butt_text %>">
  </p>

</form>
